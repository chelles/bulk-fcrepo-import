<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="edu.yale.library.beans.FieldDefinition" table="field_definition" catalog="pamoja">
        <id name="fdid" type="int">
            <column name="fdid" />
            <generator class="assigned" />
        </id>
        <property name="date" type="timestamp">
            <column name="date" length="19" not-null="true" />
        </property>
        <property name="type" type="string">
            <column name="type" length="15" not-null="true" />
        </property>
        <property name="acid" type="int">
            <column name="acid" not-null="true" />
        </property>
        <property name="faid" type="int">
            <column name="faid" not-null="true" />
        </property>
        <property name="handle" type="string">
            <column name="handle" length="45" not-null="true" />
        </property>
        <property name="tooltip" type="string">
            <column name="tooltip" length="500" />
        </property>
        <property name="multivalue" type="int">
            <column name="multivalue" not-null="true" />
        </property>
        <property name="display" type="int">
            <column name="display" not-null="true" />
        </property>
        <property name="technical" type="int">
            <column name="technical" not-null="true" />
        </property>
        <property name="export" type="int">
            <column name="export" not-null="true" />
        </property>
        <property name="locked" type="int">
            <column name="locked" not-null="true" />
        </property>
        <property name="required" type="string">
            <column name="required" length="1" not-null="true" />
        </property>
        <property name="style" type="string">
            <column name="style" length="10" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
